{
	"name": "markdown-note-app",
	"private": true,
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"dev": "concurrently --kill-others-on-fail -n SERVER,CLIENT -c blue,green \"npm run dev -w @app/server\" \"npm run dev -w @app/client\"",
		"build": "npm run build --workspaces",
		"test": "npm run test --workspaces",
		"typecheck": "npm run typecheck --workspaces",
		"start": "npm start -w @app/server"
	},
	"devDependencies": {
		"concurrently": "^9.2.1"
	}
}
