{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		/* Check against JS language level */
		"target": "ES2022",

		/* Default globals */
		"lib": ["ES2022"],

		/* Use native ESM syntax */
		"module": "ESNEXT",

		/* Align TS resolver with ESM tooling */
		"moduleResolution": "bundler",

		/* Source file root directory */
		"rootDir": "src",

		/* Compiled JS output directory */
		"outDir": "dist",

		/* Allow TS to write output files */
		"noEmit": false
	},
	"include": ["src"]
}
